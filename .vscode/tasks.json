{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Proper vue prettier",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "npx prettier ${file} --plugin-search-dir=. --write",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}